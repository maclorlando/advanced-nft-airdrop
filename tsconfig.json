{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "hardhat"],
    "resolveJsonModule": true
  },
  "include": ["./scripts", "./test", "./typechain-types"],
  "exclude": ["node_modules"]
}
